// .devcontainer/devcontainer.json
{
  "name": "React Native CLI Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "msjsdiag.vscode-react-native"
      ]
    }
  },
  "forwardPorts": [8081],
  "postCreateCommand": "npm install"
}
